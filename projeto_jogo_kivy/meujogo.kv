#:kivy 1.0.9

<RebateBola>:
    size: 25, 200
    canvas:
        Color:
            rgb: (0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size
      

<PingPongJogo>:

    bola: bola_pingpong
    jogador_1: jogador_da_esquerda
    jogador_2: jogador_da_direita

    canvas:
        Rectangle:
            source: "fundo.png"
            pos: self.pos
            size: self.size
        Color:
            rgb: (0, 0, 0)
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.jogador_1.pontuacao)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.jogador_2.pontuacao)
    
    BolaPong:
        id: bola_pingpong
        center: self.parent.center
    
    RebateBola:
        id: jogador_da_esquerda
        x: root.x
        center_y: root.center_y
    
    RebateBola:
        id: jogador_da_direita
        x: root.width - self.width
        center_y: root.center_y
    
      
    

<BolaPong>:
    size: 50, 50
    canvas:
        Color:
            rgb: (255, 255, 0)
        Ellipse:
            pos: self.pos
            size: self.size
